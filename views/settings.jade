extends layout

block content
	h1= title
	div(style="max-width:700px;")
		div.form-group
			label(for="username").col-sm-2.control-label username
			div.col-sm-10
				input.form-control(id="username", type="input", placeholder="Username")
		div.form-group
			label(for="password", id="2").col-sm-2.control-label password
			div.col-sm-10
				input.form-control(type="password", id="password", placeholder="Password")
		div.form-group
		div.col-sm-offset-2.col-sm-10
			br
			button.btn.btn-default.pinkBtn#saveSettings(type="submit") Save
			span.pull-right.label.label-success#statusSaved(style="display:none;") Saved Settings
			span.pull-right.label.label-danger#statusErrorSaving(style="display:none;") Error Saving
	script(src="/javascripts/settings.js")
	
